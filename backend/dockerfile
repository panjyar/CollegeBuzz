# Use a lightweight Python base image
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PORT=8080

# Set work directory
WORKDIR /app

# Install system dependencies for lxml, playwright, etc.
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       gcc \
       g++ \
       libssl-dev \
       libffi-dev \
       python3-dev \
       build-essential \
       curl \
       unzip \
       fonts-unifont \
       fonts-dejavu \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Copy the app code
COPY . .

# Install Playwright Chromium (without system dependencies since we'll install them manually)
RUN playwright install chromium

# Install Playwright's browser dependencies manually (avoiding the problematic font packages)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libcairo2 \
    libasound2 \
    libatspi2.0-0 \
    libxshmfence1 \
    && rm -rf /var/lib/apt/lists/*

# Expose port (Cloud Run will set the PORT env var)
EXPOSE 8080

# Start the app with Gunicorn using PORT environment variable
# Use exec to ensure proper signal handling
CMD exec gunicorn --bind :$PORT --workers 1 --threads 8 --timeout 300 app:app